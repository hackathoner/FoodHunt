- if @recipe.errors.messages[:user]
  %p.notice.alert-dismissible.alert-warning{:style => "padding: 10px"}
    - binding.pry
    = @recipe.errors.messages[:user].first

= form_for @recipe, :html => { :class => "form-horizontal" } do |f|
  %fieldset
    .form-group
      = f.label :title, :class => "control-label col-md-2"
      .col-md-10
        = f.text_field :title, :class => "form-control", :required => true
        = f.error_message_on :title, :class => "form-control"
    .form-group
      = f.label :tagline, :class => "control-label col-md-2"
      .col-md-10
        = f.text_field :tagline, :class => "form-control", :required => true
        = f.error_message_on :tagline, :class => "form-control"
    .form-group
      = f.label :link, :class => "control-label col-md-2"
      .col-md-10
        = f.text_field :link, :class => "form-control", :required => true
        = f.error_message_on :link, :class => "form-control"
    .form-group
      = f.label :image, :class => "control-label col-md-2"
      .col-md-10
        = f.text_field :image, :class => "form-control"
        = f.error_message_on :image, :class => "form-control"
    .form-group
      = f.submit "Submit", :class => "col-md-10 col-md-offset-2 btn btn-primary"
